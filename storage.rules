rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // อนุญาตให้ทุกคนอ่านได้
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // อัปโหลดได้เฉพาะคนที่ login แล้ว
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // รูปโปรไฟล์ - แก้ได้แค่เจ้าของ
    match /profile_images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // รูปสินค้า - แก้ได้แค่ seller เจ้าของ
    match /product_images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // โพสต์ชุมชน - อัปโหลดได้เฉพาะเจ้าของ
    match /community_posts/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Stories - อัปโหลดได้เฉพาะเจ้าของ
    match /stories/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
